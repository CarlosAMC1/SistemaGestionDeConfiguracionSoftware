@model IEnumerable<SistemaGestionDeConfiguracionSoftware.Models.MIEMBRO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-sm-6">
        <div class="card-box table-responsive">

            <h2 class="header-title m-t-0 m-b-30"><i class="fa fa-book"></i>Miembros</h2>

            <table id="datatable-buttons" class="table table-striped table-bordered">
                <thead class="bg-custom">
                    <tr>
                        <th>
                            @Html.DisplayName("PROYECTO")
                        </th>
                        <th>
                            @Html.DisplayName("NOMBRE MIEMBRO")
                        </th>
                        <th>
                            @Html.DisplayName("ROL")
                        </th>
                        <th>
                            @Html.DisplayName("RESPONSABILIDAD")
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PROYECTO.NOMBRE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOMBRE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ROL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RESPONSABILIDAD)
                            </td>
                            <td style="vertical-align: middle;" align="center" class="actions">

                                <div class="input-group-btn btn-rounded">
                                    <button type="button" class="btn btn-rounded waves-effect waves-light btn-success btn-trans" style="overflow: hidden; position: relative;">Acciones</button>
                                    <button type="button" class="btn btn-rounded waves-effect waves-light btn-success btn-trans dropdown-toggle" data-toggle="dropdown" style="overflow: hidden; position: relative;"><span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li><a id="editar" href="~/Miembro/Edit/@item.ID_MIEMBRO"><i class="fa fa-pencil text-warning"></i> Editar</a></li>
                                        <li><a href="~/Miembro/Delete/@item.ID_MIEMBRO" onclick="return confirm('¿Esta seguro de eliminarla?')"><i class="fa fa-trash-o text-danger"></i> Eliminar</a></li>
                                    </ul>
                                </div>

                            </td>
                        </tr>
                    }

            </table>
